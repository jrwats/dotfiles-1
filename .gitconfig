[user]
    useConfigOnly = true
[push]
    default = current
[merge]
    ff = false
[pull]
    ff = only
[color]
    ui = auto
[core]
    pager     = less
    quotepath = false
[github]
    user = mopp
[alias]
    diffh = diff --histogram
    diffw = diff --histogram --word-diff --word-diff-regex='\\w+|[^[:space:]]'
    graph = log --graph --decorate --oneline
    logs = log --stat --decorate --color --graph --pretty=fuller
    open = !$(command -v open || command -v xdg-open) $(git config remote.origin.url | sed -Ee 's!(git@|git://|ssh://)!https://!' -e 's!:([^/])!/\\1!')
    rename = branch -m
    select = "!f() { select ans in $(git status --short | awk '{print $2}'); do $EDITOR $ans; break; done }; f"
    squeeze = commit --amend --no-edit
    unstage = reset HEAD
[url "git@github.com:"]
    pushinsteadof = https://github.com/
[pager]
    branch = false
