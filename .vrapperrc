set autoindent
set ignorecase
set smartcase

noremap ; :

inoremap <C-a> <Esc>0i
inoremap <C-e> <Esc>:LineEnd<CR>a

inoremap <C-f> <Esc><Right>a
inoremap <C-b> <Esc>i
inoremap <C-n> <Esc>:LineDown<CR>a
inoremap <C-p> <Esc>:LineUp<CR>a

inoremap <C-o> <Esc>o
inoremap <C-h> <BS>
inoremap <C-d> <Esc><Right>xi
inoremap <C-k> <Esc><Right>:DeleteLineToEnd<CR>i

nnoremap Y Vy
nnoremap = :Format<CR>

nnoremap <C-j> G
nnoremap <C-k> gg
nnoremap <C-h> ^
nnoremap <C-l> $
